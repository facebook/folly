        "test_functions.cpp",
    ],
    headers = [
        "benchmark_impl.h",
        "test_functions.h",
    ],
    args = [
        "--json",
    ],
    deps = [
        "//folly:benchmark",
        "//folly:function",
        "//folly:scope_guard",
        "//folly/lang:exception",
        "//folly/portability:gflags",
    ],
    external_deps = [
        "glog",
    ],
)
