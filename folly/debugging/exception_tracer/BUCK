        "//xplat/folly/debugging/exception_tracer:compatibility",
    ],
    compiler_flags = select({
        "DEFAULT": [],
        # @fb-only: "fbsource//arvr/third-party/toolchains/platform010/build/libgcc:libgcc-static": ["-DFOLLY_STATIC_LIBSTDCXX=1"],
