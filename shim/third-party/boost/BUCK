    "range",
    "algorithm",
    "regex",
    "program_options",
    "filesystem",
    "multi_index",
    "context",
    "variant",
    "lexical_cast",
    "random",
    "sort",
    "interprocess",
])

# Empty target to satisfy some build rules:
third_party_library(
    name = "boost_preprocessor",
    homebrew_package_name = "boost",
)

third_party_library(
    name = "boost_thread",
    homebrew_package_name = "boost",
)
