load("@shim//third-party:third_party.bzl", "third_party_library")

oncall("open_source")

third_party_library(
    name = "ssl",
    pkgconfig_name = "openssl",
    repo_package_names = {
        "fedora": "openssl-devel",
        "homebrew": "openssl",
    },
)

alias(
    name = "crypto",
    actual = ":ssl",
    visibility = ["PUBLIC"],
)
